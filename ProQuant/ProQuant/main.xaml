<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProQuant.main"
            NavigationPage.HasBackButton="False">
    <ContentPage Title="Jobs" x:Name="Tab1" BackgroundColor="White">
        <!--job list-->



    </ContentPage>

    <ContentPage Title="Customise" BackgroundColor="White">
        


    </ContentPage>

    <ContentPage Title="Account" BackgroundColor="White">
        <StackLayout Padding="20,20,20,20"
                     HorizontalOptions="CenterAndExpand"
                     VerticalOptions="CenterAndExpand">
            <!--Contact us-->
            <Button Text="Contact Us"
                    BackgroundColor="Red"
                    TextColor="White"
                    Clicked="ContactUsButtonClicked"/>
            <!--Change Password-->
            <Button Text="Change Password"
                BackgroundColor="Red"
                TextColor="White"
                    Clicked="ChangePasswordButtonClicked"/>
            <!--Log Out-->
            <Button Text="Log Out"
                    BackgroundColor="LightGray"
                    TextColor="DarkRed"
                    Clicked="LogOutButtonClicked"/>
        </StackLayout>
        
        


    </ContentPage>
</TabbedPage>